	<select id="querySalesReportCountByPage" resultClass="int" parameterClass="java.util.Map">
		select count(*) from etb_salesreport T where 1 = 1
			and T.status = '1'
			<isNotEmpty prepend="and" property="ID_LOW">
				T.salesreportno <![CDATA[>=]]> #ID_LOW#
			</isNotEmpty>
			<isNotEmpty prepend="and" property="ID_HIGH">
				T.salesreportno <![CDATA[<=]]> #ID_HIGH#
			</isNotEmpty>
			<isNotEmpty prepend="and" property="SALESREPORT_NAME">
				T.salesreportname like '%$SALESREPORT_NAME$%'
			</isNotEmpty>
			<isNotEmpty prepend="and" property="CUSTOMER_NAME">
				T.customername like '%$CUSTOMER_NAME$%'
			</isNotEmpty>
	</select>
	
	<select id="queryAllSalesReportExport" parameterClass="java.util.Map" resultMap="SalesReportDto">
		select T.* from etb_salesreport T where 1 = 1
		and T.status = '1'
		<isNotEmpty prepend="and" property="ID_LOW">
			T.salesreportno <![CDATA[>=]]> #ID_LOW#
		</isNotEmpty>
		<isNotEmpty prepend="and" property="ID_HIGH">
			T.salesreportno <![CDATA[<=]]> #ID_HIGH#
		</isNotEmpty>
		order by T.updatedate desc
	</select>
	
	<select id="querySalesReportByPage" parameterClass="java.util.Map" resultMap="SalesReportDto">
		select T.* from etb_salesreport T where 1 = 1
		and T.status = '1'
		<isNotEmpty prepend="and" property="ID_LOW">
			T.salesreportno <![CDATA[>=]]> #ID_LOW#
		</isNotEmpty>
		<isNotEmpty prepend="and" property="ID_HIGH">
			T.salesreportno <![CDATA[<=]]> #ID_HIGH#
		</isNotEmpty>
		<isNotEmpty prepend="and" property="SALESREPORT_NAME">
			T.salesreportname like '%$SALESREPORT_NAME$%'
		</isNotEmpty>
		<isNotEmpty prepend="and" property="CUSTOMER_NAME">
			T.customername like '%$CUSTOMER_NAME$%'
		</isNotEmpty>
		order by T.updatedate desc
		LIMIT #start#, #end#
	</select>
	
	<select id="querySalesReportByID" parameterClass="java.util.Map" resultMap="SalesReportDto">
		select * from etb_salesreport where 
			salesreportno = #ID#
			and status = '1'
	</select>
	
	<select id="queryAllSalesReportByID" parameterClass="java.util.Map" resultMap="SalesReportDto">
		select * from etb_salesreport where 
			salesreportno = #ID#
	</select>
	
	<select id="queryAllSalesReport" parameterClass="java.util.Map" resultMap="SalesReportDto">
		select * from etb_salesreport where 1 = 1 and status = '1' order by updatedate desc
	</select>
	
	<insert id="insertSalesReport" parameterClass="com.cn.dsyg.dto.SalesReportDto">
		insert into etb_salesreport(belongto,salesreportno,salesreportname,handler,registerdate,purpose,approverid,
		reportpath01,reportpath02,reportpath03,reportpath04,reportpath05,customerid,customername,note,rank,
		status,res01,res02,res03,res04,res05,res06,res07,res08,res09,res10,
		createuid,createdate,updateuid,updatedate)
		values(#belongto#,#salesreportno#,#salesreportname#,#handler#,#registerdate#,#purpose#,#approverid#,
		#reportpath01#,#reportpath02#,#reportpath03#,#reportpath04#,#reportpath05#,#customerid#,#customername#,#note#,#rank#,
		#status#,#res01#,#res02#,#res03#,#res04#,#res05#,#res06#,#res07#,#res08#,#res09#,#res10#,
		#createuid#,NOW(),#updateuid#,#updatedate#)
	</insert>
	
	<update id="updateSalesReport" parameterClass="com.cn.dsyg.dto.SalesReportDto">
		update etb_salesreport
		set salesreportname=#salesreportname#,
			belongto=#belongto#,
			handler=#handler#,
			registerdate=#registerdate#,
			purpose=#purpose#,
			approverid=#approverid#,
			reportpath01=#reportpath01#,
			reportpath02=#reportpath02#,
			reportpath03=#reportpath03#,
			reportpath04=#reportpath04#,
			reportpath05=#reportpath05#,
			customerid=#customerid#,
			customername=#customername#,
			note=#note#,
			rank=#rank#,
			status=#status#,
			res01=#res01#,
			res02=#res02#,
			res03=#res03#,
			res04=#res04#,
			res05=#res05#,
			res06=#res06#,
			res07=#res07#,
			res08=#res08#,
			res09=#res09#,
			res10=#res10#,
			createuid=#createuid#,
			createdate=#createdate#,
			updateuid=#updateuid#,
			updatedate=NOW()
		where salesreportno = #salesreportno#
	</update>
	
